# ============================================
# GECOGREEN - Production Environment Variables
# ============================================
# Copia questo file come .env.production e compila i valori
# ============================================

# Database (REQUIRED)
POSTGRES_DB=gecogreen
POSTGRES_USER=gecogreen
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD_HERE

# JWT (REQUIRED - genera con: openssl rand -base64 32)
JWT_SECRET=YOUR_JWT_SECRET_HERE

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_KEY=your_secret_key
R2_BUCKET_NAME=gecogreen-assets

# Stripe Payments (optional initially)
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Resend Email (optional initially)
RESEND_API_KEY=re_xxx

# URLs
PUBLIC_API_URL=https://api.gecogreen.com
FRONTEND_ORIGIN=https://www.gecogreen.com

# Ports (se non usi reverse proxy)
BACKEND_PORT=8080
FRONTEND_PORT=3000
